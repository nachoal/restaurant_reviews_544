<div class="container pt-5">
  <h1 class='text-center'>Top Restaurants (5 star rating)</h1>
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-md-12">
        <ul>
          <li>Name: <%= restaurant.name %></li>
          <li>Address: <%= restaurant.address %></li>
          <li>Stars: <%= restaurant.stars %></li>
        </ul>
      </div>
    <% end %>
  </div>
</div>